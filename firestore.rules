rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Permite que o usuário leia os dados do parceiro
      match /partner/{partnerId} {
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/users/$(request.auth.uid)/partner/$(partnerId));
      }
    }
    
    // Regras para a coleção de likes
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Regras para a coleção de matches
    match /matches/{matchId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.users;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.users;
      allow update: if request.auth != null && request.auth.uid in resource.data.users;
      allow delete: if request.auth != null && request.auth.uid in resource.data.users;
    }
    
    // Regras para a coleção de cards
    match /cards/{cardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
} 