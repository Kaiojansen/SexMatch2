rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para documentos de usuários
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permite que o usuário leia os dados do parceiro
      match /partner/{partnerId} {
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/users/$(request.auth.uid)/partner/$(partnerId));
      }
    }
    
    // Regras para documentos de cartas
    match /cards/{cardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Regras para likes
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        likeId.matches(request.auth.uid + ".*");
    }

    // Regras para matches
    match /matches/{matchId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.users;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.users;
    }
  }
} 